/* pages/cart/cart.wxss */

/* template start   */
.stepper {  
  width:90px;  
  height: 25px;  
  /*给主容器设一个边框*/  
  border: 1rpx solid rgb(112, 149, 180);
  border-radius: 3px;  
  margin:0 auto;  
}  
  
/*加号和减号*/  
.stepper text {  
  width: 24px;  
  line-height: 26px;  
  text-align: center;  
  float: left;  
  color: rgb(112, 149, 180);
}  
  
/*数值*/  
.stepper input {  
  width: 40px;  
  font-weight: 400;
  float: left;  
  margin: 0 auto; 
  margin-top: 2rpx;  
  text-align: center;  
  /* position: relative; */
  font-size: 14px;  
  color: rgb(112, 149, 180);
  /*给中间的input设置左右边框即可*/  
  border-left: 1rpx solid rgb(112, 149, 180);
  border-right: 1rpx solid rgb(112, 149, 180);
}  
  
/*普通样式*/  
.stepper .normal{  
  color: rgb(112, 149, 180); 
}  
  
/*禁用样式*/  
.stepper .disabled{  
  color: #BFC2C6;  
} 
/* template end */
