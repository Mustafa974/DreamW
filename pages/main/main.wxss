/* pages/main/main.wxss */

/* BookCardSection starts */

.ShadowBottom {
  box-shadow: 0 0 60rpx #bdbdbd;
  width: 750rpx;
  height: 1rpx;
  position: fixed;
  bottom: -1rpx;
}

.mainCardContainer {
  background-color: #fff;
  padding: 0 20rpx 40rpx 0;
  min-height: 500rpx;
}

.mainCardOutline {
  display: flex;
  /* align-items: center; */
  width: 98%;
  height:227rpx;
  border-radius: 10rpx;
  background-color: rgb(248, 253, 255);
  border: 0.3rpx solid rgb(220, 238, 243);
  /* float: left; */
  margin-left:8rpx;
  /* margin-right: 2rpx; */
  margin-top:30rpx;
  position: relative;
}

.mainCardImg {
  width: 130rpx;
  height: 150rpx; 
  margin: 32rpx 20rpx 0 25rpx;
}

.mainCardH1 {
  font-size: 32rpx;
  font-weight: 600;
  line-height: 1;
  padding: 35rpx 0 7rpx 15rpx;
  color: rgb(42, 81, 116);
  /* overflow: hidden; 
  text-overflow: ellipsis;
  white-space: nowrap; */
}

.mainCardSubH1 {
  font-size: 20rpx;
  font-weight: 400;
  line-height: 1;
  color: #383838;
  padding: 18rpx 10rpx 0 20rpx;
  width: 500rpx;
  /* overflow: hidden; */
}

.mainCardSubH2 {
  font-size: 22rpx;
  font-weight: 500;
  line-height: 1;
  color: rgb(112, 149, 180);
  padding: 0 4rpx 0 15rpx;
}

.leftBox {
  float: left;
  width: 240rpx;
  overflow: hidden; 
  text-overflow: ellipsis;
  white-space: nowrap;
}

.rightBox {
  margin-left: 250rpx;
}

/* BookSection ends */


/* new section */
.scroll {
  padding-top: 23rpx;
  min-height: 1000rpx;
}
.topSelection {
  padding-bottom: 5rpx;
  margin: 0;
}

/* button section */
.bt_container {
  width: 94%;
  height: 95rpx;
  margin-top: 16rpx;
  margin-bottom: 0;
}
.status2 {
  background-color: rgb(237, 250, 234);
  border: 0.3rpx solid rgb(203, 236, 200);
  color: rgb(117, 173, 106);
}
.statusBt {
  width: 180rpx;
  height: 70rpx;
  margin-left: 470rpx;
  border-radius: 12rpx;
  font-size: 29rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}