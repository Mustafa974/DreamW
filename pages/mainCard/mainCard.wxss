/* pages/mainCard.wxss */
@import '../../template/quantity/quantity.wxss';
@import "../login/login.wxss";

/* book container section start */
.BookContainer {
  width: 710rpx;
  height: 400rpx;
  background-color: #fff;
  padding: 20rpx;
}

.BookOutlineTop {
  background-color:  rgb(248, 253, 255);
  border: 0.3rpx solid rgb(220, 238, 243);
  padding: 20rpx;
  border-radius: 14rpx;
  min-height: 420rpx;
}

.BookTop{
  height: 300rpx;
  margin-top: 8rpx;
  display: flex;
}

.BookImg {
  width: 300rpx;
  height: 400rpx;
  margin-left: 10rpx;
}

.BookTitle {
  font-size: 50rpx;
  font-weight: 800;
  line-height: 1;
  padding: 70rpx 0 15rpx 15rpx;
  color: rgb(42, 81, 116);
  text-overflow: ellipsis;
  white-space: nowrap;
}

.BookAuthor {
  font-size: 28rpx;
  font-weight: 400;
  line-height: 1;
  color: #5a5a5a;
  padding: 30rpx 5rpx 10rpx 20rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.BookSP {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 370rpx;
}
.BookSubH1 {
  font-size: 28rpx;
  font-weight: 400;
  line-height: 1;
  color: #5a5a5a;
  padding: 30rpx 15rpx 0 20rpx;
  /* width: 100rpx; */
}
.BookSubH2 {
  font-size: 60rpx;
  font-weight: 900;
  line-height: 1;
  padding: 30rpx 0 0 5rpx;
  color: #92B6D5;
  /* width: 100rpx; */
}
/* book container section end */

/* book detail section start */
.BookOutlineBottom {
  top: 420rpx;
  padding: 20rpx;
  min-height: 800rpx;
}

.BookDetail {
  height: 800rpx;
  margin-top: 5rpx;
}

.td {
  display: flex;
  height: 45rpx;
  width: 560rpx;
  background: white;
  padding: 15rpx 90rpx 10rpx 20rpx;
  align-items: center;
  border-bottom: 1rpx solid rgb(218, 230, 238);
}

.th {
  width: 140rpx;
  font-size: 34rpx;
  font-weight: 400;
  padding: 0 0 5rpx 60rpx;
  color: rgb(42, 81, 116);
}

.tr {
  /* width: 500rpx; */
  font-size: 29rpx;
  font-weight: 320;
  padding: 0 40rpx 5rpx 20rpx;
  color: rgb(114, 153, 187);
}

.dis{
  display: flex;
}

.tr2 {
  /* width: 15rpx; */
  font-size: 29rpx;
  font-weight: 320;
  padding: 0 10rpx 5rpx 0;
  color: rgb(114, 153, 187);
}

.discription {
  height: 150rpx;
  margin-top: 65rpx;
}

.td2 {
  display: flex;
  height: 40rpx;
  width: 650rpx;
  background: white;
  padding: 15rpx 90rpx 10rpx 20rpx;
  align-items: center;
}
.cartBt {
  width: 60rpx;
  height: 64rpx;
  position: fixed;
  z-index: 88;
  bottom: 0;
  margin-left: 15rpx;
  margin-bottom: 20rpx;
}
.cartBt2 {
  width: 60rpx;
  height: 64rpx;
  position: fixed;
  z-index: 88;
  bottom: 40rpx;
  margin-left: 15rpx;
  margin-bottom: 20rpx;
}
.bottomButton {
  width: 330rpx;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: rgb(248, 253, 255);
  border: 0.3rpx solid rgb(220, 238, 243);
  text-align: center;
  font-size: 32rpx;
  font-weight: 600rpx;
  padding-top: 13rpx;
  color: rgb(42, 81, 116);
  z-index: 88;
  margin-left: 90rpx;
}
.bt2 {
  width: 330rpx;
  height: 100rpx;
  position: fixed;
  bottom: 40rpx;
  background-color: rgb(248, 253, 255);
  border: 0.3rpx solid rgb(220, 238, 243);
  text-align: center;
  font-size: 32rpx;
  font-weight: 600rpx;
  padding-top: 13rpx;
  color: rgb(42, 81, 116);
  z-index: 88;
  margin-left: 90rpx;
}
/* book detail section end */

/* dialog section start */
.dialog__container {
  width: 710rpx;
  height: 550rpx;
  background-color: #fff;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.column {
  display: flex;
  flex-direction: column;
}

.image-sku {
  width: 210rpx;
  height: 240rpx;
  margin-left: 60rpx;
  margin-top: 30rpx;
}

.image-close {
  margin-left: 410rpx;
  margin-right: 6rpx;
}

.sku-price {
  color: rgb(112, 149, 180);
  font-size: 35rpx;
  position: relative;
  font-weight: 600rpx;
}

.sku-title {
  font-size: 30rpx;
  margin-right: 20rpx;
  margin-left: 40rpx;
}

.sku-value {
  color: rgb(112, 149, 180);
  font-size: 30rpx;
  font-weight: 400rpx;
}

.border-line {
  width: 100%;
  height: 2rpx;
  background: #f5f5f5; 
  margin-top: 30rpx;
  margin-left: 20rpx;
}
/* dialog section end */